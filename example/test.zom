fn add(a: u32,b: u32) u32 {
    f.println("Hello world!")
    return a + b
}

fn max(a: u32, b: u32) u32 {
    if (a > b)
        return a
    else
        return b
    // ^ a conditional stmt
}

// or with only one return stmt

fn maxSimple(a, b: u32) u32 {
    return a if a > b else b
    //     ^ a conditional expression
}
